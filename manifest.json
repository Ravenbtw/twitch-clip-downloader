{
	"manifest_version": 2,
	"name": "Twitch Clip Downloader",
	"short_name": "TCD",
	"version": "0.1.22",
	"description": "Easily download Twitch clips!",
	"content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*"],
			"js": ["content.js", "subscribers.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"downloads",
		"https://ravenbtw.com/*"
	]
}
